<% include ./partials/header %>

<div class='ui main text container segment'>
	<div class='ui huge header'>
		New Blog Post
	</div>
	<form action='/blogs' method='POST' class="ui form">
  <div class="field">
    <label>Please enter your name</label>
    <input required type="text" name="blog[title]" placeholder="Full Name">
  </div>
		  <div class="field">
    <label>Please enter the image URL</label>
    <input required type="text" name="blog[image]" placeholder="Image URL">
  </div>
		<div class="field">
    <label>Text</label>
    <textarea required name='blog[body]' rows="25"></textarea>
  </div>
    <button class="ui purple  basic button">Add your new post!</button>
</form>
</div>



