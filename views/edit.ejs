<% include ./partials/header %>

<div class='ui main text container segment'>
	<div class='ui huge header'>
		Edit <%=blog.title%>
	</div>
	<form action='/blogs/<%=blog._id%>?_method=PUT' method='POST' class="ui form">
  <div class="field">
    <label>Please enter your name</label>
    <input required type="text" name="blog[title]" value="<%=blog.title%>">
  </div>
		  <div class="field">
    <label>Please enter the image URL</label>
    <input required type="text" name="blog[image]" value='<%= blog.image%>'>
  </div>
		<div class="field">
    <label>Text</label>
    <textarea required name="blog[body]" rows="25"><%=blog.body%></textarea>
  </div>
    <button class="ui purple  basic button">Save changes</button>
</form>
</div>



<% include ./partials/footer %>